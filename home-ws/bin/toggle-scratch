#!/usr/bin/env bash
# toggle the "scratch" xterm on the current desktop.
# if not running, fire it up and an openbox config places it in the righ tspot
# if running, gracefully close (has a tmux session, nothing lost)

running=$(wmctrl -x -l | awk '$3 == "scratch.Alacritty" {print;}')
if [[ -n "$running" ]]; then
  wmctrl -x -c scratch.Alacritty
else
  exec run-term scratch
fi
